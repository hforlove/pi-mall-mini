.goods {
  display: flex;
  padding: 24rpx 32rpx;
}
.goods .img {
  width: 196rpx;
  height: 196rpx;
}
.goods .int {
  flex: 1;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
  padding-left: 20rpx;
}
.goods .title {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods .price {
  color: #FB0017;
}
.goods .m view {
  font-size: 24rpx;
  color: gray;
}
.goods .br > view {
  position: absolute;
  right: 0;
  bottom: 0;
  color: gray;
  font-size: 24rpx;
}
