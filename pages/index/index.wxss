.search-bar {
  position: relative;
  box-sizing: inherit;
}
.search-bar .input {
  display: flex;
  align-items: center;
  width: 360rpx;
  height: 100%;
  border: 1px solid #ccc;
  margin-left: 60rpx;
  color: #ccc;
  padding-left: 70rpx;
  font-size: 28rpx;
}
.search-bar van-icon {
  position: absolute;
  left: 80rpx;
  bottom: 10rpx;
  font-size: 40rpx;
  color: #ccc;
}
.index-swiper {
  margin-top: 20rpx;
  height: 340rpx;
}
.index-swiper image {
  width: 100%;
  height: 100%;
}
.index-nav {
  display: flex;
  padding: 40rpx 0;
}
.index-nav view {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.index-nav view image {
  width: 100rpx;
  height: 100rpx;
}
.index-nav view text {
  font-size: 24rpx;
}
.index-notice {
  height: 80rpx;
}
.index-notice swiper-item view {
  height: 100%;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #ed6a0c;
}
.index-notice swiper-item van-icon {
  position: relative;
  top: 2rpx;
}
