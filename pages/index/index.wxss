.search-bar {
  top: 0;
  left: 0;
  width: 100%;
  position: fixed;
  box-sizing: inherit;
  background-color: #fff;
  padding-bottom: 20rpx;
  z-index: 9;
}
.search-bar .input {
  display: flex;
  align-items: center;
  width: 360rpx;
  height: 100%;
  border: 1px solid #ccc;
  margin-left: 60rpx;
  color: #ccc;
  padding-left: 70rpx;
  font-size: 28rpx;
}
.search-bar van-icon {
  position: absolute;
  left: 80rpx;
  bottom: 30rpx;
  font-size: 40rpx;
  color: #ccc;
}
.index-swiper {
  margin-top: 120rpx;
  height: 340rpx;
}
.index-swiper image {
  width: 100%;
  height: 100%;
}
.index-nav {
  display: flex;
  padding: 40rpx 0;
}
.index-nav navigator {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.index-nav navigator image {
  width: 100rpx;
  height: 100rpx;
}
.index-nav navigator text {
  font-size: 24rpx;
}
.index-notice {
  height: 80rpx;
}
.index-notice swiper-item view {
  height: 100%;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #ed6a0c;
}
.index-notice swiper-item van-icon {
  position: relative;
  top: 2rpx;
}
.index-block {
  padding: 40rpx 0;
}
.index-block .title {
  text-align: center;
  font-weight: bold;
  font-size: 32rpx;
}
.index-block .list {
  display: flex;
  flex-wrap: wrap;
  padding: 0 12rpx;
}
.index-block .list > view {
  width: 50%;
  padding: 32rpx 16rpx;
}
