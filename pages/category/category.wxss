.category {
  display: flex;
  height: calc(100vh - 112rpx);
}
.category scroll-view {
  height: 100%;
}
.category .left {
  width: 172rpx;
}
.category .left .box {
  display: flex;
  flex-direction: column;
}
.category .left .box text {
  padding: 12rpx 0;
  font-size: 28rpx;
  text-align: center;
}
.category .right {
  flex: 1;
}
.category .right .items {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 32rpx;
}
.category .right .block {
  padding-top: 40rpx;
}
.category .right .item {
  width: 33.33%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.category .right .item image {
  width: 152rpx;
  height: 152rpx;
}
.category .right .item text {
  font-size: 24rpx;
  text-align: center;
}
.van-cell:after {
  display: none;
}
