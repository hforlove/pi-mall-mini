.goods-swiper {
  height: 750rpx;
}
.goods-swiper image {
  width: 100%;
  height: 100%;
}
.goods-info {
  padding: 20rpx 32rpx 120rpx;
}
.goods-info .title {
  display: flex;
  align-items: center;
}
.goods-info .title .l {
  flex: 1;
  padding-right: 10rpx;
  line-height: 36rpx;
  font-weight: bold;
}
.goods-info .title .r {
  width: 80rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 24rpx;
}
.goods-info .tips {
  display: flex;
  padding: 20rpx 0;
  justify-content: space-between;
}
.goods-info .tips > view {
  font-size: 32rpx;
}
.goods-info .tips > view text:last-child {
  font-size: 24rpx;
  text-decoration: line-through;
}
.goods-info .tips > text {
  font-size: 24rpx;
}
.goods-info .cell .van-cell {
  padding-left: 0;
  padding-right: 0;
}
.goods-info .cell .van-cell__title {
  width: 80px;
  flex: none;
  color: #000;
}
.goods-info .cell .van-cell__value {
  text-align: left;
  color: gray;
}
.goods-info .cell-score .van-cell__title {
  font-size: 30rpx;
}
.goods-info .cell-score .van-cell__value {
  text-align: right;
  color: gray;
}
.goods-info .detail {
  width: 100%;
  overflow: hidden;
}
.goods-info .detail img {
  width: 100%;
}
.goods-popup {
  padding: 40rpx;
}
.goods-popup > view {
  padding: 20rpx 0;
  color: gray;
}
.goods-popup > view > text {
  margin-right: 32rpx;
}
.goods-action text {
  font-size: 24rpx;
}
