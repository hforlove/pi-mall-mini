.profile-bar {
  position: relative;
  height: 440rpx;
  padding: 100rpx 40rpx 0;
  display: flex;
  align-items: center;
  background: #e55039;
  color: #fff;
}
.profile-bar::before,
.profile-bar::after {
  content: '';
  display: block;
  width: 100%;
  height: 100%;
  background-image: url('https://pic.imgdb.cn/item/609b78cfd1a9ae528facc970.png');
  background-size: 100% 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.profile-bar .head {
  width: 124rpx;
  height: 124rpx;
  border-radius: 50%;
  overflow: hidden;
}
.profile-bar .name {
  font-size: 48rpx;
  padding: 0 20rpx;
}
.profile-item {
  padding: 20rpx 0;
}
.profile-item .van-cell__left-icon-wrap {
  color: red;
  font-size: 44rpx;
}
.profile-item .van-grid-item__icon {
  color: red;
}
.profile-item .van-grid-item__text text {
  font-size: 24rpx;
}
.profile-item .account {
  display: flex;
}
.profile-item .account > view {
  display: flex;
  flex: 1;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.profile-item .account text {
  font-size: 24rpx;
}
.profile-item .account .red {
  font-size: 28rpx;
  padding-bottom: 4rpx;
}
.profile-item .account .cont {
  padding: 0 32rpx;
}
